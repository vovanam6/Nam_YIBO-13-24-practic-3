using System;

public class InterpolationSearch {
    public static int Search(int[] arr, int lo, int hi, int x) {
        if (lo <= hi && x >= arr[lo] && x <= arr[hi]) {
            int pos = lo + (((hi - lo) * (x - arr[lo])) / (arr[hi] - arr[lo]));
            if (arr[pos] == x) return pos;
            if (arr[pos] < x) return Search(arr, pos + 1, hi, x);
            return Search(arr, lo, pos - 1, x);
        }
        return -1;
    }

    public static void Main() {
        int[] arr = {10, 12, 13, 16, 18, 19, 20, 21, 22, 23};
        int x = 18;
        int result = Search(arr, 0, arr.Length - 1, x);
        if (result != -1)
            Console.WriteLine("Элемент найден на позиции: " + result);
        else
            Console.WriteLine("Элемент не найден");
    }
}
