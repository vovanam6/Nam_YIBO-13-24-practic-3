using System;

public class InterpolationSearch {
    // Рекурсивный метод интерполяционного поиска
    // arr - отсортированный массив с равномерным распределением
    // lo - нижняя граница поиска, hi - верхняя граница поиска
    // x - искомый элемент
    public static int Search(int[] arr, int lo, int hi, int x) {
        // Условие продолжения поиска:
        // - границы не пересеклись (lo <= hi)
        // - искомый элемент находится в диапазоне [arr[lo], arr[hi]]
        if (lo <= hi && x >= arr[lo] && x <= arr[hi]) {
            // Формула интерполяции для предсказания позиции:
            // pos = lo + [(x - arr[lo]) × (hi - lo)] / (arr[hi] - arr[lo])
            // Эта формула основана на предположении о равномерном распределении данных
            int pos = lo + (((hi - lo) * (x - arr[lo])) / (arr[hi] - arr[lo]));
            
            Console.WriteLine($"Предсказанная позиция: {pos}, значение: {arr[pos]}");
            
            // Проверяем элемент на предсказанной позиции
            if (arr[pos] == x) {
                return pos; // Элемент найден!
            }
            
            // Если x меньше элемента на позиции pos
            if (arr[pos] > x) {
                // Искомый элемент находится в левой части
                // Рекурсивно ищем в интервале [lo, pos-1]
                return Search(arr, lo, pos - 1, x);
            }
            
            // Если x больше элемента на позиции pos
            if (arr[pos] < x) {
                // Искомый элемент находится в правой части
                // Рекурсивно ищем в интервале [pos + 1, hi]
                return Search(arr, pos + 1, hi, x);
            }
        }
        
        // Элемент не найден
        return -1;
    }

    public static void Main() {
        // Массив должен быть отсортирован и желательно с равномерным распределением
        int[] arr = {10, 12, 13, 16, 18, 19, 20, 21, 22, 23, 24, 33, 35, 42, 47};
        int x = 18;
        
        Console.WriteLine("Массив: " + string.Join(" ", arr));
        Console.WriteLine("Ищем элемент: " + x);
        Console.WriteLine("--- Процесс поиска ---");
        
        int result = Search(arr, 0, arr.Length - 1, x);
        
        if (result != -1) {
            Console.WriteLine($"\nЭлемент найден на позиции: {result}");
        } else {
            Console.WriteLine("\nЭлемент не найден");
        }
        
        // Сравнение с бинарным поиском
        Console.WriteLine("\n--- Сравнение с бинарным поиском ---");
        x = 33;
        Console.WriteLine($"Ищем элемент {x} интерполяционным поиском:");
        result = Search(arr, 0, arr.Length - 1, x);
        Console.WriteLine($"Результат: позиция {result}");
    }
}
