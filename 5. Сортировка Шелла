using System;

public class ShellSort {
    public static void Sort(int[] arr) {
        int n = arr.Length;
        
        // Начинаем с большого промежутка (gap) и уменьшаем его
        // Последовательность Кнута: gap = n/2, n/4, n/8, ..., 1
        for (int gap = n / 2; gap > 0; gap /= 2) {
            // Применяем сортировку вставками для элементов на расстоянии gap
            // Начинаем с элемента на позиции gap
            for (int i = gap; i < n; i++) {
                // Сохраняем текущий элемент для вставки
                int temp = arr[i];
                int j;
                
                // Сдвигаем элементы, которые больше temp, на gap позиций вправо
                // Сравниваем элементы на расстоянии gap друг от друга
                for (j = i; j >= gap && arr[j - gap] > temp; j -= gap) {
                    // Сдвигаем элемент на gap позиций вправо
                    arr[j] = arr[j - gap];
                }
                
                // Вставляем temp на правильную позицию
                arr[j] = temp;
            }
            // После обработки с текущим gap массив становится более упорядоченным
            // Уменьшаем gap и повторяем процесс
        }
    }

    public static void Main() {
        int[] arr = {12, 34, 54, 2, 3};
        Console.WriteLine("Исходный массив: " + string.Join(" ", arr));
        Sort(arr);
        Console.WriteLine("Отсортированный массив: " + string.Join(" ", arr));
    }
}
