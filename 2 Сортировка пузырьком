using System;

public class BubbleSort {
    public static void Sort(int[] arr) {
        int n = arr.Length;
        
        // Внешний цикл - количество проходов по массиву
        // После i проходов i наибольших элементов уже на своих местах
        for (int i = 0; i < n - 1; i++) {
            // Внутренний цикл - сравнение соседних элементов
            // Проходим только до n-i-1, так как последние i элементов уже отсортированы
            for (int j = 0; j < n - i - 1; j++) {
                // Сравниваем текущий элемент со следующим
                if (arr[j] > arr[j + 1]) {
                    // Если порядок неправильный, меняем элементы местами
                    // Больший элемент "всплывает" вправо
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
            // После каждой итерации внешнего цикла наибольший из неотсортированных
            // элементов занимает свою окончательную позицию
        }
    }

    public static void Main() {
        int[] arr = {64, 34, 25, 12, 22, 11, 90};
        Console.WriteLine("Исходный массив: " + string.Join(" ", arr));
        Sort(arr);
        Console.WriteLine("Отсортированный массив: " + string.Join(" ", arr));
    }
}
